{
	"compilerOptions": {
		// Config
		"allowJs": true,
		"checkJs": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"target": "ESNext",
		// Emit
		"noEmit": true,
		"noEmitHelpers": true,
		// Type Checking
		"alwaysStrict": true,
		"strict": true,
		"noImplicitAny": true,
		"noImplicitOverride": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noUnusedParameters": true,
		"useDefineForClassFields": true,
		// Types
		"typeRoots": ["node_modules/@types/"],
	},
	"exclude": ["./dist/", "./scripts", "**/__skip__/", "**/node_modules/"],
	"include": ["**/*.js", "**/*.ts"],
}
